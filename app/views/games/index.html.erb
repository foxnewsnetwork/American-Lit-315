<div class="row">
	<div class="span4">
		<h1>Games</h1>
	</div>
    <div class="span4 offset4" style="text-align:right">
<%= link_to "Add a Game", publisher_game_path(current_publisher, "new"), :class=>"btn"%>
	</div>
</div>
<hr>

<table class="table" style="width:100%; text-align:center; font-size:1.5em; ">
	<thead>
        <tr>
                <th style="padding:0.5em">
                Name
                </th>
                <th style="padding:0.5em">
                Meta Data
                </th>
                <th style="padding:0.5em">
				Earnings
                </th>
                <th style="padding:0.5em">
				Token
                </th>
				<th style="padding:0.5em">
				</th>
        </tr>
	</thead>
	<tbody>
	<% if not @games.nil? %>
        <% @games.each do |game| %>
        <tr>
			<td style="padding:0.5em">
			<%= game.name %>
			</td>
			<td style="padding:0.5em">
			<%= game.meta_data %>
			</td>
			<td style="padding:0.5em">
			<%= number_to_currency game.earnings/100 %>
			</td>
			<td>
			<%= game.token %>
			</td>
			<td style="padding:0.5em">	
			<%= link_to "New Token", { :action => "new_token", :publisher_id => current_publisher.id, :game_id => game.id }, :class=>"btn" %>
			<%= link_to "Delete", { :action => "destroy", :id => game.id },
			  :confirm => "Are you sure?", :method => :delete, :class=>"btn" %>
			</td>
		</tr>

        <% end %>
	<% else %>
		You dont have any games yet!
	<% end 	%>
	</tbody>
</table>


