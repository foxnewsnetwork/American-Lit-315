<h1>Upload Product</h1>
<%= form_for :product, @product, :url =>{ :action => "create"}, :html => { :multipart => true } do |form| %>

	<%= hidden_field_tag(:company_id, current_company.id) %>

	<h3>Name</h3>
        <%= form.text_field :name %>

	<h3>Description</h3>
        <%= form.text_field :description %>

	<h3>Product Type</h3>
        <%= form.text_field :product_type %>
	<h3>Meta Data</h3>
        <%= form.text_field :meta_data %>

	<h3>Price</h3>
        <%= form.text_field :price %>
	<br>
	<br>
	<br>
	<p>
        <%= form.file_field :picture %>
	</p>
        <br>
<!--    <%= form.submit "Submit" %>-->
<button type="submit" class="btn primary large" id="product_submit" name="commit">Submit!</button>

        </p>
<% end %>

<br>
