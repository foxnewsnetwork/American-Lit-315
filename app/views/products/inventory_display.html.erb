<html>
<head>
<link href="/stylesheets/SHOP_CSS/custom.css" rel="stylesheet">
<style>
body {
	font-family: sans-serif;
	font-family: Helvetica;
	text-align:center;
	margin-left:auto;
	margin-right:auto;
}
table {
	table-layout: fixed;
}

img {
	height: 130px;
}
</style>
</head>
<body>
<h4>
Good Game! Your exclusive rewards.
<% if user_signed_in? %>
<%= current_user.name %>
<%= link_to('Switch User', destroy_user_session_path, :method=>'delete', :class=>'btn btn-success')%>
<% else %>
<%= link_to 'Sign in', product_user_sign_in_url %>
<%= link_to 'Register', product_user_register_url %>

<% end %>
</h4>
<br>
<table style="text-align:center" align="center">
<tr>
<% @products.each do |p| %>
<td style="padding:10px">
	<td style="width:150px; background-color: #000;border: 2px solid #C0C0C0;">
			<img src='<%= p.picture_path %>'>
	</td>
</td>
<% end %>
</tr>

<tbody>
<% @products.each do |p| %>
<%= form_for :product, :url => {:action => 'confirm_purchase'}, :html => { :multipart => true } do |f| %>
<%= hidden_field_tag 'product_id', p.id %>

<% if current_user %>
	<%= hidden_field_tag 'user_id', current_user.id  %>
<% else %>
	<%= hidden_field_tag 'user_id', -1  %>
<% end %>
<td style="padding:10px">
	<td style="width:150px; ">
		<%= p.name %><br>
		<font size='3em' color='#E56717' >
			<%= number_to_currency p.price %>
				</font> + <font size='2em'>free shipping</font><br>
		<%= f.submit 'Get it', :class=>'btn' %>
	</td>
</td>
<% end %>
<% end %>
</tbody>
</table>
</body>
</html>
