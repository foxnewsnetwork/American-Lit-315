<html>
<head>
<link href="/stylesheets/SHOP_CSS/custom.css" rel="stylesheet">
<style>
body {
	font-family: sans-serif;
	font-family: Helvetica;
	text-align:center;
	margin-left:auto;
	margin-right:auto;
}
table {
	table-layout: fixed;
}

img {
	height: 130px;
}
</style>
</head>
<body>
<table style="text-align:center" align="center">
<tr>
<% @products.each do |p| %>
<td style="padding:10px">
	<td style="width:150px; background-color: #000;border: 2px solid #C0C0C0;">
			<img src='<%= p.picture_path %>'>
	</td>
</td>
<% end %>
</tr>

<tbody>
<% @products.each do |p| %>
<td style="padding:10px">
	<td style="width:150px; ">
		<%= p.name %><br>
		<font size='3em' color='#E56717' ><%= number_to_currency p.price %></font> + <font size='2em'>free shipping</font><br>
		<a href='#' class='btn btn-primary'>Get it</a>
	</td>
</td>
<% end %>
</tbody>
</table>
</body>
</html>
