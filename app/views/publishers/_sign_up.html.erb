			<div id="myPublisherSignUpModal" class="modal hide fade">
				<div class="modal-header">
					<a class="close" data-dismiss="modal" >&times;</a>
					<h3>New Platform Sign Up</h3>
				</div>
				<div class="modal-body">
<%= form_for("publisher", :url => publisher_registration_path) do |f| %>
<%= f.text_field :name, :placeholder=>"company name" %><br>
  <%= f.text_field :email, :placeholder=>"email" %><br>
  <%= f.password_field :password, :placeholder=>'password' %><br>
  <%= f.password_field :password_confirmation, :placeholder=>'password confirmation' %><br>
  <%= f.submit 'Sign Up', :class=>'btn btn-large btn-primary', :style=>"width:15em" %><br>
<% end %>

				</div>
			</div>
