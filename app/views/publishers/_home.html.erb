<div id="myPublisherSignUpModal" class="modal hide fade">
	<div class="modal-header">
		<a class="close" data-dismiss="modal" >&times;</a>
		<h3>For game publishers and developers</h3>
	</div>

	<div class="modal-body">
		<table style="text-align:center;width:100%">
			<thead>
				<tr>
					<th>
				<h3>
				Sign In
				</h3>
					</th>
					<th>
				<h3>
				Sign Up
				</h3>
					</th>
				</tr>
			</thead>	
			<tbody>
				<tr>
					<% if publisher_signed_in? %>
						<%= link_to "Go To Dashboard", current_publisher, :class=>"btn btn-large btn-primary" %><br><br>
						<%= link_to "Logout", destroy_publisher_session_path, :method => :delete, :class=>"btn btn-large btn-primary" %>
					<% else %>

						<td style="padding-top:2em; padding-bottom:2em; border-right:1px solid #C8C8C8">
							<%= form_for("publisher", :url => publisher_session_path) do |f| %>
								<%= f.text_field :email,:placeholder=>"email" %><br>
								<%= f.password_field :password,:placeholder=>"password" %><br>
								<p><%= f.check_box :remember_me %> Remember me </p>
								<%= f.submit 'Sign in', :class=>'btn btn-large btn-primary', :style=>"width:15em" %><br>
								<%= link_to "Forgot your password?", new_password_path('publisher') %>
							<% end %>
						</td>
						<td style="text-align:center;">
							<%= render "publishers/sign_up" %>
						</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>
